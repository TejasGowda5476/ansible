pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Ansible') {
            steps {
                script {
                       sh 'su - ansible' 
                       sh '/var/lib/jenkins/workspace/${JOB_NAME}/ansible-playbook httpd.yml'
                }
            }
        }
    }
}
